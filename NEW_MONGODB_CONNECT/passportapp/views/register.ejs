<%- include('includes/header') %>

<!--//Bootstrap - required remove from inputs-->
<div class="container">
    <% if (locals.errorResults) { %>    
        <div class="alert alert-danger">        
          <% errorResults.errors.forEach( error => { %>
                <%= error.msg %> <br>
          <% }) %>  
        </div>
    <% } %>
    <%- messages() %>
      <form method="post" action="/users/register" class="form-signin">
        <h2 class="form-signin-heading text-center">User Registration</h2>
        <label class="sr-only">Name</label>
        <input type="text" name="name" class="form-control" placeholder="Name" value="<%= !!(locals.name)?name:''%>" autofocus>
        <br>
        <label class="sr-only">Email</label>
        <input type="text" name="email" class="form-control" placeholder="Email" value="<%= !!(locals.email)?email:''%>" autofocus>
        <br>
        <label class="sr-only">Username</label>
        <input type="text" name="username" class="form-control" placeholder="Username" value="<%= !!(locals.username)?username:''%>"  autofocus>
        <br>
        <label class="sr-only">Password</label>
        <input type="password" name="password" class="form-control" placeholder="Password" value="<%= !!(locals.password)?password:''%>"  >
        <br>
         <label class="sr-only">Confirm Password</label>
        <input type="password" name="password2" class="form-control" placeholder="Password Confirm" value="<%= !!(locals.password2)?password2:''%>"  >
        <p>Have Account? <a href="/users/login">Login</a></p>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign up</button>
      </form>
      <% if (locals.errorResults) { %>
      <% errorResults.errors.forEach( error => { %>
            <div class="alert alert-danger"><%= error.msg %></div>
      <% }) %>  
    <% } %>
</div> <!-- /container -->

<%- include('includes/footer') %>